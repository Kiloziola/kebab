//JAVA
package com.example.myapplication;

import android.os.Bundle;
import android.view.View;
import android.widget.CheckBox;
import android.widget.EditText;
import android.widget.RadioButton;
import android.widget.RadioGroup;
import android.widget.Spinner;
import android.widget.TextView;
import android.widget.Toast;

import androidx.activity.EdgeToEdge;
import androidx.appcompat.app.AppCompatActivity;
import androidx.core.graphics.Insets;
import androidx.core.view.ViewCompat;
import androidx.core.view.WindowInsetsCompat;

import java.util.ArrayList;

public class MainActivity extends AppCompatActivity {
    ArrayList<String> druzyna = new ArrayList<>();
    int wielkoscDruzyny = 0;

    TextView wyswietleniePostaci;
    RadioGroup plecPostaciRadioGroup;
    RadioButton kobieta, mezczyzna;
    EditText imiePostaci;
    Spinner rasaPostaci;
    String wybranaRasaPostaci;
    CheckBox wlamywaniePostac, alchemiaPostac,kowalstwoPostac;
    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        EdgeToEdge.enable(this);
        setContentView(R.layout.activity_main);
        ViewCompat.setOnApplyWindowInsetsListener(findViewById(R.id.main), (v, insets) -> {
            Insets systemBars = insets.getInsets(WindowInsetsCompat.Type.systemBars());
            v.setPadding(systemBars.left, systemBars.top, systemBars.right, systemBars.bottom);
            return insets;
        });
        imiePostaci = findViewById(R.id.imiePostaci);
        plecPostaciRadioGroup = findViewById(R.id.plecPostaci);
        kobieta = findViewById(R.id.kobieta);
        mezczyzna = findViewById(R.id.mezczyzna);
        rasaPostaci = findViewById(R.id.spinner_rasa_postaci);
        wybranaRasaPostaci = rasaPostaci.getSelectedItem().toString();
        wlamywaniePostac = findViewById(R.id.wlamywanie);
        alchemiaPostac = findViewById(R.id.alchemia);
        kowalstwoPostac = findViewById(R.id.kowalstwo);
        wyswietleniePostaci = findViewById(R.id.wyswietleniePostaci);
    }


//sb.append("Linia pierwsza.\n");
    public void stworzPostac(View view){
        int liczbaUmiejetnosci = 0;
        ArrayList<String> umiejetnosci = new ArrayList<>();
        StringBuilder sb = new StringBuilder();
        String imie = imiePostaci.getText().toString();
        sb.append(imie+"\n");
        int wybranyId = plecPostaciRadioGroup.getCheckedRadioButtonId();
        String plec;
        if (wybranyId == R.id.kobieta) {
            sb.append("Kobieta\n");
            plec = "Kobieta";
        } else if (wybranyId == R.id.mezczyzna) {
            sb.append("Mężczyzna\n");
            plec = "Mężczyzna";
        }else {
            plec = "";
        }

            if(wlamywaniePostac.isChecked()){
                umiejetnosci.add("Włamywanie\n");
                liczbaUmiejetnosci++;
            }

            if(alchemiaPostac.isChecked()){
                umiejetnosci.add("Alchemia\n");
                liczbaUmiejetnosci++;
            }

            if(kowalstwoPostac.isChecked()){
                umiejetnosci.add("Kowalstwo\n");
                liczbaUmiejetnosci++;
                if (liczbaUmiejetnosci >= 3) {
                    umiejetnosci.clear();
                    Toast.makeText(this, "Można mieć tylko 2 umiejętności", Toast.LENGTH_SHORT).show();
                    kowalstwoPostac.setChecked(false);
                }
            }
            

        sb.append(wybranaRasaPostaci+"\n");
        sb.append(umiejetnosci);
        
        if(imiePostaci.equals("") || plec.isEmpty() || wybranaRasaPostaci.isEmpty() || umiejetnosci.isEmpty()) {
            Toast.makeText(this, "Wypełnij wszystkie pola zanim dodasz postać", Toast.LENGTH_SHORT).show();
        }else {

            Postac postac = new Postac(imie, plec, wybranaRasaPostaci, umiejetnosci);
            druzyna.add(sb + "\n");
            String finalnyTekst = druzyna.toString();
            wyswietleniePostaci.setText(finalnyTekst);
        }
    }
    public  void Reset(View view){
        imiePostaci.setText("");
        int wybranyId = plecPostaciRadioGroup.getCheckedRadioButtonId();
        if (wybranyId == R.id.kobieta) {
            kobieta.setChecked(false);
        } else if (wybranyId == R.id.mezczyzna) {
            mezczyzna.setChecked(false);
        }
        wybranaRasaPostaci = "Człowiek";
        wlamywaniePostac.setChecked(false);
        alchemiaPostac.setChecked(false);
        kowalstwoPostac.setChecked(false);
        wyswietleniePostaci.setText("");
    }
}





//Postac.java
package com.example.myapplication;

import java.util.ArrayList;

public class Postac {
    String imie;
    String plec;
    String rasa;
    ArrayList<String> umiejetnosci = new ArrayList<>();

    public Postac(String imie, String plec, String rasa, ArrayList<String> umiejetnosci){
        this.imie = imie;
        this.plec = plec;
        this.rasa = rasa;
        this.umiejetnosci = umiejetnosci;
    }


}





