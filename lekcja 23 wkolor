    <Button
        android:id="@+id/zielony"
        android:text="zielony"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <Button
        android:id="@+id/niebieski"
        android:text="niebieski"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
</LinearLayout>



//wybierz kolor java
package com.example.myapplication;

import android.content.Intent;
import android.os.Bundle;

import androidx.appcompat.app.AppCompatActivity;

public class wybierzKolor extends AppCompatActivity {

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_wybierz_kolor);

        findViewById(R.id.czerwony).setOnClickListener(v -> zwroc("#FF0000"));
        findViewById(R.id.zielony).setOnClickListener(v -> zwroc("#00FF00"));
        findViewById(R.id.niebieski).setOnClickListener(v -> zwroc("#0000FF"));
    }

    void zwroc(String kolor) {
        Intent i = new Intent();
        i.putExtra("kolor", kolor);
        setResult(RESULT_OK, i);
        finish();
    }
}
