//main java
package com.example.myapplication;

import android.content.Intent;
import android.os.Bundle;
import android.widget.Button;
import android.widget.ImageView;
import android.widget.TextView;
import android.widget.Toast;

import androidx.activity.EdgeToEdge;
import androidx.appcompat.app.AppCompatActivity;

public class MainActivity extends AppCompatActivity {

    private static final int KOD_EDYCJA_PROFILU = 101;
    private static final int KOD_AWATAR = 103;

    public static final String KLUCZ_IMIE = "klucz_imie";
    public static final String KLUCZ_WIEK = "klucz_wiek";
    public static final String KLUCZ_AWATAR = "klucz_awatar";

    TextView imie, wiek;
    ImageView zdjAwatar;


    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        EdgeToEdge.enable(this);
        setContentView(R.layout.activity_main);

        imie = findViewById(R.id.tekstImie);
        wiek = findViewById(R.id.tekstWiek);
        zdjAwatar = findViewById(R.id.imageAwatar);

        Button Edytuj = findViewById(R.id.Edytuj);
        Button Awatar = findViewById(R.id.Awatar);

        Edytuj.setOnClickListener(v -> {
            Intent i = new Intent(this, com.example.myapplication.EdytujProfil.class);
            i.putExtra(KLUCZ_IMIE, imie.getText().toString());
            i.putExtra(KLUCZ_WIEK, wiek.getText().toString());
            startActivityForResult(i, KOD_EDYCJA_PROFILU);
        });

        Awatar.setOnClickListener(v ->
                startActivityForResult(
                        new Intent(this, WybierzAwatarActivity.class),
                        KOD_AWATAR)
        );
    }

    @Override
    protected void onActivityResult(int requestCode, int resultCode, Intent data) {
        super.onActivityResult(requestCode, resultCode, data);

        if (resultCode == RESULT_CANCELED) {
            Toast.makeText(this, "edycja anulowana", Toast.LENGTH_SHORT).show();
            return;
        }

        if (resultCode == RESULT_OK && data != null) {

            if (requestCode == KOD_EDYCJA_PROFILU) {
                imie.setText(data.getStringExtra(KLUCZ_IMIE));
                wiek.setText(data.getStringExtra(KLUCZ_WIEK));
            }

            if (requestCode == KOD_AWATAR) {
                zdjAwatar.setImageResource(
                        data.getIntExtra(KLUCZ_AWATAR, 0));
            }
        }
    }
}



//activitywybierz xml
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/avatar1"
        android:src="@drawable/avatar1"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <ImageView
        android:id="@+id/avatar2"
        android:src="@drawable/avatar2"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
</LinearLayout>




//wybierz awatar java
package com.example.myapplication;

import android.content.Intent;
import android.os.Bundle;
import android.widget.ImageView;

import androidx.appcompat.app.AppCompatActivity;

public class WybierzAwatarActivity extends AppCompatActivity {

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_wybierz_awatar);

        findViewById(R.id.avatar1).setOnClickListener(v -> zwroc(R.drawable.avatar1));
        findViewById(R.id.avatar2).setOnClickListener(v -> zwroc(R.drawable.avatar2));
    }

    void zwroc(int id) {
        Intent i = new Intent();
        i.putExtra(MainActivity.KLUCZ_AWATAR, id);
        setResult(RESULT_OK, i);
        finish();
    }
}





//edytuj profil xml
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/poleImie"
        android:hint="imię"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/poleWiek"
        android:hint="wiek"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/przyciskZapisz"
        android:text="zapisz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>






//edytor profil java
package com.example.myapplication;

import android.app.Activity;
import android.content.Intent;
import android.os.Bundle;
import android.widget.Button;
import android.widget.EditText;
import android.widget.Toast;

import androidx.appcompat.app.AppCompatActivity;

public class EdytujProfil extends AppCompatActivity {

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_edytuj_profil);

        EditText imie = findViewById(R.id.poleImie);
        EditText wiek = findViewById(R.id.poleWiek);
        Button zapisz = findViewById(R.id.przyciskZapisz);

        Intent i = getIntent();
        imie.setText(i.getStringExtra(MainActivity.KLUCZ_IMIE));
        wiek.setText(i.getStringExtra(MainActivity.KLUCZ_WIEK));

        zapisz.setOnClickListener(v -> {
            if (imie.getText().toString().trim().isEmpty()) {
                Toast.makeText(this, "imię nimoze być puste", Toast.LENGTH_SHORT).show();
                return;
            }

            Intent wynik = new Intent();
            wynik.putExtra(MainActivity.KLUCZ_IMIE, imie.getText().toString());
            wynik.putExtra(MainActivity.KLUCZ_WIEK, wiek.getText().toString());

            setResult(Activity.RESULT_OK, wynik);
            finish();
        });
    }
}
